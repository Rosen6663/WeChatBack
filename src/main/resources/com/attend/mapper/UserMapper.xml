    <select id="selectCheckByTime" resultType="com.attend.entity.Check">
        select * from checks
       <where>
             <if test="id !=null">
                 user_id=#{id}
             </if>
            <if test="startTime!=null and endTime!=null">
                and check_in_time between #{startTime} and #{endTime}
            </if>
       </where>

    </select>
</mapper>
